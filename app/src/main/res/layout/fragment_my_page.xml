<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/return_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_mypage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:fontFamily="@font/nanumgothicbold"
            android:textColor="#2c2c2c"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 네비게이션 드로어 -->
    <LinearLayout
        android:id="@+id/nav_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1778F2"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_reset_list"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_nav_square_button"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:src="@drawable/reset"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="초기화"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/btn_contact_us"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_nav_square_button"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:src="@drawable/logo"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="문의하기"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_nav_delete_button"
            android:gravity="center"
            android:text="계정 탈퇴"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- 사용자 이름 및 복용 안내 -->
    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용중이신 약"
            android:fontFamily="@font/nanumgothic"
            android:textColor="#2c2c2c"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 약 추가하기 버튼 -->
    <TextView
        android:id="@+id/btn_add_medicine"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_add_medicine_selector"
        android:gravity="center"
        android:text="약 추가하기"
        android:textColor="@color/add_medicine_text_color_selector"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/user_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 약 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_medicine_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_medicine"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 약 추가 옵션 오버레이 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_options_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF"
        android:visibility="gone"
        tools:visibility="visible">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 알약 스캔 -->
            <FrameLayout
                android:id="@+id/btn_scan_pill_overlay"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_add_options_button"
                android:layout_margin="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/scan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알약 스캔"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/nanumgothic"/>
                </LinearLayout>
            </FrameLayout>

            <!-- 검색하기 -->
            <FrameLayout
                android:id="@+id/btn_search_medicine_overlay"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_add_options_button"
                android:layout_margin="16dp">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/search"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검색하기"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/nanumgothic"/>
                </LinearLayout>
            </FrameLayout>

            <!-- 업로드 -->
            <FrameLayout
                android:id="@+id/btn_upload_medicine_overlay"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_add_options_button"
                android:layout_margin="16dp">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/upload"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="업로드"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/nanumgothic"/>
                </LinearLayout>
            </FrameLayout>

            <!-- 취소 -->
            <FrameLayout
                android:id="@+id/btn_cancel_overlay"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_add_options_button"
                android:layout_margin="16dp">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/exit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취소"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/nanumgothic"/>
                </LinearLayout>
            </FrameLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
